{
  "name": "react-hooks",
  "version": "0.2.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "eslint:fix": "eslint --fix './src/**/*.{js,jsx,ts,tsx}'",
    "stylelint:fix": "stylelint --fix './src/**/*.scss' --syntax scss",
    "lint-staged": "lint-staged",
    "commit": "git-cz"
  },
  "dependencies": {
    "antd": "^3.26.0",
    "axios": "^0.19.0",
    "constate": "^1.3.2",
    "intersection-observer": "^0.11.0",
    "lodash": "^4.17.15",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-query": "^2.5.13",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.2",
    "use-immer": "^0.4.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^26.0.9",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "babel-plugin-import": "^1.13.0",
    "commitizen": "^4.1.2",
    "customize-cra": "^1.0.0",
    "customize-cra-react-refresh": "^1.1.0",
    "cz-conventional-changelog": "^3.2.0",
    "cz-customizable": "^6.3.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mockjs": "^1.1.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "react-app-rewire-hot-loader": "^2.0.1",
    "react-app-rewired": "^2.1.6",
    "source-map-explorer": "^2.1.2",
    "stylelint": "^13.6.1",
    "stylelint-config-css-modules": "^2.1.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.2.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react-hooks": "^2.2.1",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,scss}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "src/**/*.scss": [
      "stylelint --syntax scss"
    ],
    "scr/**/*.{js,jsx,ts,tsx}": "eslint --ext .js,.jsx,.ts,.tsx"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-unused-expressions": "off",
      "@typescript-eslint/no-unused-expressions": [
        "error"
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-prettier/recommended",
      "stylelint-config-css-modules",
      "stylelint-config-rational-order"
    ],
    "plugins": [
      "stylelint-order",
      "stylelint-config-rational-order/plugin",
      "stylelint-declaration-block-no-ignored-properties"
    ],
    "rules": {
      "order/properties-order": [],
      "plugin/rational-order": [
        true,
        {
          "border-in-box-model": true,
          "empty-line-between-groups": true
        }
      ],
      "no-descending-specificity": null,
      "plugin/declaration-block-no-ignored-properties": true,
      "unicode-bom": "never"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

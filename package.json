{
  "name": "react-hooks",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "eslint:fix": "eslint --fix './src/**/*.{js,jsx,ts,tsx}'",
    "stylelint:fix": "stylelint --fix './src/**/*.scss' --syntax scss",
    "lint-staged": "lint-staged",
    "commit": "git-cz"
  },
  "dependencies": {
    "antd": "^3.25.3",
    "axios": "^0.19.0",
    "lodash": "^4.17.15",
    "lodash-es": "^4.17.15",
    "react": "^16.8.6",
    "react-dom": "npm:@hot-loader/react-dom",
    "react-router-dom": "^5.0.1",
    "react-scripts": "^3.2.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "^12.7.1",
    "@types/react": "^16.8.25",
    "@types/react-dom": "^16.8.5",
    "@types/react-router-dom": "^5.1.2",
    "babel-plugin-import": "^1.13.0",
    "commitizen": "^4.0.3",
    "customize-cra": "^0.9.1",
    "cz-conventional-changelog": "^3.0.2",
    "cz-customizable": "^6.2.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.2",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "lint-staged": "^9.2.1",
    "node-sass": "^4.13.0",
    "prettier": "^1.18.2",
    "react-app-rewire-hot-loader": "^2.0.1",
    "react-app-rewired": "^2.1.5",
    "react-hot-loader": "^4.12.18",
    "stylelint": "^12.0.0",
    "stylelint-config-css-modules": "^2.1.0",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.2.0",
    "stylelint-order": "^3.1.1",
    "stylelint-prettier": "^1.1.1",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "tslint-react-hooks": "^2.2.1",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.scss": [
      "stylelint --syntax scss --fix",
      "git add"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,scss}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "scr/**/*.{js,jsx,ts,tsx}": "eslint --fix --ext .js,.jsx,.ts,.tsx"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-unused-expressions": "off",
      "@typescript-eslint/no-unused-expressions": [
        "error"
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-prettier/recommended",
      "stylelint-config-css-modules",
      "stylelint-config-rational-order"
    ],
    "plugins": [
      "stylelint-order",
      "stylelint-config-rational-order/plugin",
      "stylelint-declaration-block-no-ignored-properties"
    ],
    "rules": {
      "order/properties-order": [],
      "plugin/rational-order": [
        true,
        {
          "border-in-box-model": true,
          "empty-line-between-groups": true
        }
      ],
      "no-descending-specificity": null,
      "plugin/declaration-block-no-ignored-properties": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

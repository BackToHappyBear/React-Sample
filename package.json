{
  "name": "react-hooks",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "tslint:fix": "tslint -c tslint.json src/**/*.{ts,tsx} --fix --format verbose",
    "stylelint:fix": "stylelint \"src/**/*.scss\" --syntax scss",
    "commit": "git-cz"
  },
  "dependencies": {
    "antd": "^3.21.2",
    "axios": "^0.19.0",
    "cz-customizable": "^6.2.0",
    "lodash": "^4.17.15",
    "lodash-es": "^4.17.15",
    "react": "^16.8.6",
    "react-dom": "npm:@hot-loader/react-dom",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "^12.7.1",
    "@types/react": "^16.8.25",
    "@types/react-dom": "^16.8.5",
    "@types/react-router-dom": "^4.3.4",
    "babel-plugin-import": "^1.12.0",
    "commitizen": "^4.0.3",
    "customize-cra": "^0.4.1",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.2",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "lint-staged": "^9.2.1",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "react-app-rewired": "^2.1.3",
    "react-hot-loader": "^4.12.10",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-standard": "^18.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "tslint-react-hooks": "^2.2.1",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,scss}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "scr/**/*.{js,jsx,ts,tsx}": "tslint -c tslint.json --fix",
    "src/**/*.scss": "stylelint --syntax scss"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

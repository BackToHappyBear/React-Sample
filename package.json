{
  "name": "react-hooks",
  "version": "0.2.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "eslint:fix": "eslint --fix './src/**/*.{js,jsx,ts,tsx}'",
    "stylelint:fix": "stylelint --fix './src/**/*.scss' --syntax scss",
    "lint-staged": "lint-staged",
    "commit": "git-cz"
  },
  "dependencies": {
    "antd": "^4.5.3",
    "axios": "^0.21.0",
    "constate": "^3.1.0",
    "intersection-observer": "^0.11.0",
    "lodash": "^4.17.15",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-query": "^2.5.13",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "use-immer": "^0.4.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^26.0.9",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "babel-plugin-import": "^1.13.0",
    "commitizen": "^4.1.2",
    "customize-cra": "^1.0.0",
    "cz-conventional-changelog": "^3.2.0",
    "cz-customizable": "^6.3.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^23.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mockjs": "^1.1.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "react-app-rewired": "^2.1.6",
    "source-map-explorer": "^2.1.2",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,scss}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "src/**/*.scss": [
      "stylelint --config .stylelintrc.js --fix"
    ],
    "scr/**/*.{js,jsx,ts,tsx}": "eslint --config .eslintrc.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
